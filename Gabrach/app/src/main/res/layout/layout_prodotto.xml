<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@android:dimen/app_icon_size"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="282dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCategoria"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:contentDescription="@string/todo"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="156dp"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="1"
            android:paddingStart="3dp"
            android:text="@string/textview"
            android:textAlignment="textStart"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bottonePiu"
                android:layout_width="33dp"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:text="@string/piu"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/bottoneMeno"
                android:layout_width="33dp"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:text="@string/meno"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quantita"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:text="@string/unpz"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtPrezzo"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:text="@string/uno_euro"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>